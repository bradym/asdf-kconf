#!/usr/bin/env bash

set \
  -o errexit \
  -o nounset \
  -o pipefail

readonly repository="particledecay/kconf"

CURL="curl -s"
if [ -n "${OAUTH_TOKEN:-}" ];
then
  CURL="$CURL -H 'Authorization: token $OAUTH_TOKEN'"
fi
CURL="$CURL "

$CURL -fL "https://api.github.com/repos/$repository/releases" | grep tag_name | sed 's/"tag_name": //g;s/"//g;s/,//g' | sed -e 's/\s*v//g' -e '/1.6.0/q' | tac
